{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@src/": ["./src/*"],
      "@assets/": ["./assets/*"],
      "@components/": ["./components/*"],
      "@config/": ["./config/*"],
      "@hooks/": ["./hooks/*"],
      "@pages/": ["./pages/*"],
      "@routes/": ["./routes/*"],
      "@screens/": ["./screens/*"],
      "@services/": ["./services/*"],
      "@styles/": ["./styles/*"],
      "@utils/": ["./utils/*"]
    }
  }
}
